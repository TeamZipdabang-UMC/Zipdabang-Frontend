<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/my_frame"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="#FDEC65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/my_backbtn"
            android:layout_width="15.5dp"
            android:layout_height="15.2dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:src="@drawable/my_backbtn2"
            android:scaleType="centerCrop"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical|start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글쓰기"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/jipdabang_black"
            android:fontFamily="@font/notosanskrbold"
            android:layout_gravity="center_horizontal|center_vertical"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/my_albumbtn"
        android:layout_width="match_parent"
        android:layout_height="318dp"
        android:background="#EDEDED"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_frame">
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/my_album"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피 대표 사진 등록하기"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:textColor="@color/jipdabang_black"
                android:fontFamily="@font/notosanskrbold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-14dp"
                android:text="레시피와 관련 있는 사진 한 장을 업로드해 주세요."
                android:textSize="12dp"
                android:textColor="@color/jipdabang_black"
                android:fontFamily="@font/notosanskrregular"/>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/my_empty_tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/my_linear_tital"
        app:layout_constraintTop_toBottomOf="@id/my_albumbtn"/>

    <TextView
        android:id="@+id/my_empty_tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="24"
        app:layout_constraintStart_toEndOf="@id/my_linear_tital"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_albumbtn"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/my_linear_tital"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/my_empty_tv2"
        app:layout_constraintHorizontal_weight="312"
        app:layout_constraintStart_toEndOf="@id/my_empty_tv1"
        app:layout_constraintTop_toBottomOf="@id/my_albumbtn">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskrbold"
            android:text="레시피 제목"
            android:textColor="@color/jipdabang_black"
            android:textSize="20dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/my_recipe_tv_tital"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:textSize="14dp"
            app:hintEnabled="false"
            app:boxStrokeColor="#999999"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:endIconMode="clear_text"
            app:endIconTint="#EDEDED"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/my_recipe_edt_tital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:fontFamily="@font/notosanskrregular"
                android:hint="레시피 제목을 작성해 주세요. (최대 20자)"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/jipdabang_black"
                android:textColorHint="#999999"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/my_linear_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/my_linear_tital"
        app:layout_constraintStart_toStartOf="@id/my_linear_tital"
        app:layout_constraintEnd_toEndOf="@id/my_linear_tital">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskrbold"
            android:text="소요 시간"
            android:textColor="@color/jipdabang_black"
            android:textSize="20dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/my_recipe_tv_time"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:textSize="14dp"
            app:hintEnabled="false"
            app:boxStrokeColor="#999999"
            app:endIconMode="clear_text"
            app:endIconTint="#EDEDED"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/my_recipe_edt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:fontFamily="@font/notosanskrregular"
                android:hint="레시피를 만들 때 소요되는 시간을 작성해 주세요."
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/jipdabang_black"
                android:textColorHint="#999999"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/my_linear_describe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/my_linear_time"
        app:layout_constraintStart_toStartOf="@id/my_linear_tital"
        app:layout_constraintEnd_toEndOf="@id/my_linear_tital">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskrbold"
            android:text="레시피 한 줄 소개"
            android:textColor="@color/jipdabang_black"
            android:textSize="20dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/my_recipe_tv_describe"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:textSize="14dp"
            app:hintEnabled="false"
            app:boxStrokeColor="#999999"
            app:counterEnabled="true"
            app:counterMaxLength="100"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/my_recipe_edt_describe"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:gravity="top"
                android:background="@drawable/round"
                android:fontFamily="@font/notosanskrregular"
                android:hint="레시피 설명을 작성해 주세요. (최대 100자)"
                android:textColor="@color/jipdabang_black"
                android:textColorHint="#999999"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/my_linear_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/my_linear_describe"
        app:layout_constraintStart_toStartOf="@id/my_linear_tital"
        app:layout_constraintEnd_toEndOf="@id/my_linear_tital">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskrbold"
            android:text="재료"
            android:textColor="@color/jipdabang_black"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재료 이름"
                android:textSize="16dp"
                android:fontFamily="@font/notosanskrregular"
                android:textColor="@color/jipdabang_black"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재료의 양 또는 개수"
                android:textSize="16dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/notosanskrregular"
                android:textColor="@color/jipdabang_black"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id='@+id/my_recipe_ingredient'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/my_recipe_tv_ingredientname"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_gravity="start"
                app:hintEnabled="false"
                app:boxStrokeColor="#999999"
                app:counterMaxLength="100"
                app:errorEnabled="true"
                android:layout_weight="5">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/my_recipe_edt_ingredientname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:background="@drawable/round"
                    android:fontFamily="@font/notosanskrregular"
                    android:hint="예) 우유"
                    android:textColor="@color/jipdabang_black"
                    android:textColorHint="#999999"
                    android:textSize="14dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/my_recipe_tv_ingredientqun"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="14dp"
                android:layout_marginEnd="2dp"
                app:hintEnabled="false"
                app:boxStrokeColor="#999999"
                app:counterMaxLength="100"
                app:errorEnabled="true"
                android:layout_weight="4.5">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/my_recipe_edt_ingredientqun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:background="@drawable/round"
                    android:fontFamily="@font/notosanskrregular"
                    android:hint="예) 100ml"
                    android:textColor="@color/jipdabang_black"
                    android:textColorHint="#999999"
                    android:textSize="14dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/my_ingredient_plusbtn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="-12dp"
            android:background="#EDEDED"
            android:src="@drawable/my_plusicon"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/my_linear_aftertip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/my_linear_ingredient"
        app:layout_constraintStart_toStartOf="@id/my_linear_tital"
        app:layout_constraintEnd_toEndOf="@id/my_linear_tital"
        app:layout_constraintBottom_toTopOf="@id/my_btnbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskrbold"
            android:text="레시피 팁\u0026후기"
            android:textColor="@color/jipdabang_black"
            android:textSize="20dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/my_recipe_tv_aftertip"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:textSize="14dp"
            app:hintEnabled="false"
            app:boxStrokeColor="#999999"
            app:counterEnabled="true"
            app:counterMaxLength="200"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/my_recipe_edt_aftertip"
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:gravity="top"
                android:background="@drawable/round"
                android:fontFamily="@font/notosanskrregular"
                android:hint="레시피를 만들 때 주의해야 할 사항이나 맛있게 만드는 팁을 작성해 주세요. (최대 200자)"
                android:textColor="@color/jipdabang_black"
                android:textColorHint="#999999"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/my_btnbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/my_linear_tital"
        app:layout_constraintEnd_toEndOf="@id/my_linear_tital">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_savebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:background="#EDEDED"
            android:text="임시저장"
            android:textSize="16dp"
            android:fontFamily="@font/notosanskrbold"
            android:textColor="#999999"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_uploadbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EDEDED"
            android:clickable="false"
            android:text="업로드"
            android:textSize="16dp"
            android:fontFamily="@font/notosanskrbold"
            android:textColor="#999999"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>