<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >

    <ImageView
        android:id="@+id/home_iv_category_1"
        android:layout_width="165dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_home_iv"
        android:scaleType="fitXY"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ImageView>
            <ImageView
                android:id="@+id/check_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/selector_myscrap_edit_check"
                android:layout_gravity="end"/>


</FrameLayout>
    <TextView
        android:id="@+id/home_tv_category_1"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/main_font"
        app:layout_constraintTop_toBottomOf="@id/home_iv_category_1"
        app:layout_constraintStart_toStartOf="@id/home_iv_category_1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:maxLines="2"
        android:gravity="center_horizontal"
        >

    </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_heart_iv"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:src="@drawable/jjipdabang_heart"
                app:layout_constraintStart_toStartOf="@id/home_tv_category_1"
                app:layout_constraintTop_toBottomOf="@id/home_tv_category_1">

            </ImageView>

            <TextView
        android:id="@+id/home_tv_heart_1"
        android:layout_width="70dp"
        android:layout_height="20dp"
                android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginVertical="3dp"
        app:layout_constraintTop_toBottomOf="@id/home_tv_category_1"
        android:fontFamily="@font/main_font"
        android:textSize="12dp"
        >
    </TextView>
    </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>