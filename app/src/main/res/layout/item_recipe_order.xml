<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_order_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step "
        android:textColor="@color/jipdabaing_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:fontFamily="@font/noto_sans"/>

    <TextView
        android:id="@+id/tv_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="num"
        app:layout_constraintStart_toEndOf="@id/tv_order_step"
        app:layout_constraintTop_toTopOf="@id/tv_order_step"
        android:textColor="@color/jipdabaing_black"
        android:textSize="18sp"
        android:fontFamily="@font/noto_sans"/>

    <TextView
        android:id="@+id/tv_order_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_order_step"
        android:layout_marginTop="6dp"
        android:maxLines="8"
        android:ellipsize="end"
        tools:text="만드는 방법 1단계를 설명해주세요."
        android:textColor="@color/jipdabaing_black"
        android:textSize="16sp"
        android:gravity="left"
        android:fontFamily="@font/noto_sans"
        app:layout_constraintBottom_toTopOf="@id/iv_order_description"/>

    <ImageView
        android:id="@+id/iv_order_description"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_order_description"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/iv_order_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>