<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/comment_control_popup"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_comment_delete_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글 삭제"
        android:textColor="@color/jipdabaing_black"
        android:fontFamily="@font/noto_sans"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_comment_delete_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제한 댓글은 복구할 수 없습니다.\n댓글을 삭제하시겠습니까?"
        app:layout_constraintTop_toBottomOf="@id/tv_comment_delete_alert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_comment_delete_description"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/btn_comment_final_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="취소"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/jipdabaing_black"
            android:background="@drawable/btn_delete_or_edit"
            android:backgroundTint="#EDEDED"
            android:gravity="center"
            android:layout_weight="1.1"
            />

        <TextView
            android:id="@+id/btn_comment_final_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="삭제하기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/jipdabaing_black"
            android:background="@drawable/btn_delete_or_edit"
            android:backgroundTint="@color/jipdabang_yellow"
            android:gravity="center"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/btn_comment_final_cancel"
            android:layout_weight="0.9"/>

    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>