<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="324dp"
    android:layout_height="540dp"
    android:background="@drawable/recipe_complete_popup">

    <ImageView
        android:id="@+id/iv_exit_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/ic_exit_popup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_popup_recipe_image"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_marginTop="16dp"
        android:background="@color/jipdabang_login_bt_gray"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_exit_popup" />

    <TextView
        android:id="@+id/tv_popup_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/noto_sans"
        android:text="@string/popup_completed"
        android:textColor="@color/jipdabaing_black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_popup_recipe_image" />

    <TextView
        android:id="@+id/tv_popup_compliment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/noto_sans"
        android:gravity="center"
        android:text="@string/popup_compliment"
        android:textColor="@color/jipdabaing_black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_popup_complete" />

    <TextView
        android:id="@+id/btn_popup_comment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btn_challenge_recipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_popup_compliment"
        android:layout_marginTop="14dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="82dp"
        android:text="레시피 후기 남기기"
        android:gravity="center"
        android:textColor="@color/jipdabaing_black"
        android:textStyle="bold"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans"/>

    <TextView
        android:id="@+id/tv_popup_comment_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_popup_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        android:text="다음에 남기기"
        android:textSize="12sp"
        android:textColor="#999999"
        android:fontFamily="@font/noto_sans"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>