<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/my_recipe_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/my_item_edgeround"
        android:clipToOutline="true" />

    <TextView
        android:id="@+id/my_recipe_tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/my_recipe_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:textSize="12dp"
        android:text="음료이름이얼마나길어질까요\n20자정도는거뜬히들어가겠져"
        android:fontFamily="@font/noto_sans"
        android:textColor="@color/jipdabang_black"
        android:maxWidth="96dp"
        android:minLines="2"
        android:maxLines="2"
        android:gravity="center"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/my_recipe_heart"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_recipe_tital"
        android:drawableLeft="@drawable/like_filled"
        android:maxLines="1"
        android:layout_marginTop="4dp"
        android:textSize="12dp"
        android:text="219"
        android:textColor="#767676"/>

</androidx.constraintlayout.widget.ConstraintLayout>