<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
    android:id="@+id/my_notice_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="공지사항1"
    android:fontFamily="@font/notosanskrfont"
    android:textStyle="bold"
    android:textSize="18sp"
        android:textColor="@color/jipdabang_black"
        app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.3"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.1"
    android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/my_notice_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023년 1월 25일"
        android:fontFamily="@font/notosanskrfont"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/my_notice_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:includeFontPadding="false"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#DBDBDB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="7dp"
        android:layout_height="12dp"
        android:src="@drawable/my_setting_vector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@id/my_notice_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />




</androidx.constraintlayout.widget.ConstraintLayout>