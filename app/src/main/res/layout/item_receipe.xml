<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/home_tv_category"
        android:layout_width="93dp"
        android:layout_height="31dp"
        android:fontFamily="@font/main_font"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_ll"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"/>

    <LinearLayout
        android:id="@+id/home_ll"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_tv_category"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_iv_category_1"
            android:layout_width="165dp"
            android:layout_height="120dp"

            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/home_tv_category_1"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:fontFamily="@font/main_font"
            app:layout_constraintTop_toBottomOf="@id/home_iv_category_1"
            app:layout_constraintStart_toStartOf="@id/home_iv_category_1"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:maxLines="2"
            android:gravity="center_horizontal"
            >

        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_heart_iv"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:src="@drawable/jjipdabang_heart"
                app:layout_constraintStart_toStartOf="@id/home_tv_category_1"
                app:layout_constraintTop_toBottomOf="@id/home_tv_category_1">

            </ImageView>

            <TextView
                android:id="@+id/home_tv_heart_1"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginVertical="3dp"
                app:layout_constraintTop_toBottomOf="@id/home_tv_category_1"
                android:fontFamily="@font/main_font"
                android:textSize="12dp"
                >
            </TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_tv_category"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_iv_category_2"
            android:layout_width="165dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            >
        </ImageView>

        <TextView
            android:id="@+id/home_tv_category_2"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/main_font"
            app:layout_constraintTop_toBottomOf="@id/home_iv_category_2"
            app:layout_constraintStart_toStartOf="@id/home_iv_category_2"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:gravity="center_horizontal"
            >

        </TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_heart_iv_2"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:src="@drawable/jjipdabang_heart"
                app:layout_constraintStart_toStartOf="@id/home_tv_category_2"
                app:layout_constraintTop_toBottomOf="@id/home_tv_category_2">

            </ImageView>

            <TextView
                android:id="@+id/home_tv_heart_2"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginVertical="3dp"
                app:layout_constraintTop_toBottomOf="@id/home_tv_category_1"
                android:fontFamily="@font/main_font"
                android:textSize="12dp"
                >
            </TextView>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>